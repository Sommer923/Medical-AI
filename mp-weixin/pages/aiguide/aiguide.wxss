.chat-container {
  display: flex;
  flex-direction: column;
  height: 100%;
}

.message-container {
  flex: 1;
  padding: 10px;
  background-color: #f0f0f0;
}

.message {
  display: flex;
  align-items: flex-start;
  margin-bottom: 10px;
}

.avatar {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  background-color: #ccc;
}

.user-avatar {
  background-color: #1a73e8;
}

.ai-avatar {
  background-color: #fbbc05;
}

.message-content {
  max-width: 80%;
  padding: 10px;
  border-radius: 10px;
  background-color: #fff;
  margin-left: 10px;
}

.input-container {
  display: flex;
  align-items: center;
  padding: 10px;
  background-color: #fff;
  border-top: 1px solid #ddd;
}

textarea {
  flex: 1;
  height: 50px;
  border: 1px solid #ddd;
  border-radius: 5px;
  padding: 10px;
}

button {
  margin-left: 10px;
  background-color: #1a73e8;
  color: #fff;
  border: none;
  border-radius: 5px;
  padding: 10px 20px;
}
